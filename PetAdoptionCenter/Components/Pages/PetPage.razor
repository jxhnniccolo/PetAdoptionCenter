@page "/petpage"
@rendermode InteractiveServer

<header class="header py-4" style="background-color: #87CEFA; color: white;">
    <h1 class="text-center">Adopt a Pet</h1>
    <nav class="nav justify-content-center">
        <NavLink href="/" class="nav-link text-white" active-class="active">Home</NavLink>
        <NavLink href="/petpage" class="nav-link text-white" active-class="active">Pet Page</NavLink>
        <NavLink href="/volunteerpage" class="nav-link text-white" active-class="active">Volunteer</NavLink>
        <NavLink href="/adoptionapplicationpage" class="nav-link text-white" active-class="active">Adoption Application</NavLink>
    </nav>
</header>

<section class="hero d-flex align-items-center" style="background-color: #FFDAB9; min-height: 400px; position: relative;">
    <img src="Image/petPage.jpg" alt="Pet Picture" class="img-fluid position-absolute w-100 h-100" style="object-fit: cover; opacity: 0.7;">
    <div class="container text-center position-relative" style="z-index: 1;">
        <h2 class="text-black">Find Your Perfect Match</h2>
        <p class="text-black">Find your new companion and give a deserving animal a loving home. Browse our adoptable pets and discover your new best friend.</p>
    </div>
</section>

<section class="section py-5" style="background-color: #F5F5F5;">
    <h3 class="text-center text-primary">Adopt a Pet</h3>
    <p class="text-center">Choose your perfect furry friend! Each pet is unique and looking for a forever home.</p>

    <div class="cards d-flex justify-content-center flex-wrap gap-4 mt-4">
        <!-- Card 1 -->
        <div class="card shadow-lg rounded overflow-hidden" style="width: 300px;">
            <img src="Image/cat2.png" alt="Cat" class="card-img-top" width="300" height="300">
            <div class="card-body">
                <h4 class="card-title">Leo</h4>
                <p class="card-text">Leo is a friendly and playful boy who loves attention. He's curious and enjoys exploring his surroundings. He gets along well with other cats but hasn't been tested with dogs or children.</p>
                <NavLink href="/adoptionapplicationpage" class="btn btn-primary w-100">Adopt</NavLink>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="card shadow-lg rounded overflow-hidden" style="width: 300px;">
            <img src="Image/Dog1.png" alt="Dog" class="card-img-top" width="300" height="300">
            <div class="card-body">
                <h4 class="card-title">Luna</h4>
                <p class="card-text">Luna is sweet and energetic. She loves to play fetch, go for walks, and cuddle on the couch. She gets along well with dogs but her interactions with cats are unknown. A home with older children would be ideal.</p>
                <NavLink href="/adoptionapplicationpage" class="btn btn-primary w-100">Adopt</NavLink>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="card shadow-lg rounded overflow-hidden" style="width: 300px;">
            <img src="Image/Cat3.png" alt="Cat" class="card-img-top" width="300" height="300">
            <div class="card-body">
                <h4 class="card-title">Jasper</h4>
                <p class="card-text">Jasper is a playful and curious kitten with a lot of energy. He loves chasing toys and cuddling. He gets along with gentle cats but hasn’t been introduced to dogs.</p>
                <NavLink href="/adoptionapplicationpage" class="btn btn-primary w-100">Adopt</NavLink>
            </div>
        </div>
    </div>
</section>

<footer class="footer py-4" style="background-color: #4682B4; color: white;">
    <div class="container text-center">
        <p>&copy; 2024 Your Website. All rights reserved.</p>
        <nav>
            <a href="#" class="text-white">Privacy Policy</a> |
            <a href="#" class="text-white">Terms of Service</a>
        </nav>
    </div>
</footer>

