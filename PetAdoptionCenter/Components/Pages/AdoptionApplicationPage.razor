@page "/adoptionapplicationpage"


<h1 class="text-center">Adoption Application</h1>

<section class="intro-section">
    <p>
        Thank you for considering adopting a pet and giving them a loving forever home! Please fill out the application form below, and we’ll get back to you as soon as possible to help you start this heartwarming journey.
    </p>
</section>

<form class="application-form">
    <div class="form-group">
        <label for="name">Full Name</label>
        <input id="name" type="text" placeholder="Enter your full name" />
    </div>

    <div class="form-group">
        <label for="email">Email Address</label>
        <input id="email" type="email" placeholder="Enter your email" />
    </div>

    <div class="form-group">
        <label for="phone">Phone Number</label>
        <input id="phone" type="tel" placeholder="Enter your phone number" />
    </div>

    <div class="form-group">
        <label for="address">Home Address</label>
        <textarea id="address" placeholder="Enter your full home address"></textarea>
    </div>

    <div class="form-group">
        <label for="pet">Which Pet Are You Interested In?</label>
        <select id="pet">
            <option disabled selected>Select a pet</option>
            <option>Domestic Shorthair (Tabby)</option>
            <option>Golden Retriever</option>
            <option>Persian Cat</option>
            <option>Labrador</option>
        </select>
    </div>

    <div class="form-group">
        <label for="reason">Why Do You Want to Adopt a Pet?</label>
        <textarea id="reason" placeholder="Tell us why you’d like to adopt a pet"></textarea>
    </div>

    <div class="form-group">
        <label for="experience">Do You Have Experience with Pets?</label>
        <textarea id="experience" placeholder="Share any relevant experience caring for pets"></textarea>
    </div>

    <div class="form-group">
        <label for="terms">
            <input id="terms" type="checkbox" />
            I agree to the <a href="/terms-and-conditions">terms and conditions</a>.
        </label>
    </div>

    <button type="submit" class="btn-primary">Submit Application</button>
</form>

